{
  "name": "CreoMate",
  "version": "1.1.1",
  "description": "CreoMate app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourcompany.creoMate",
    "productName": "CreoMate",
    "icon": "icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/**/*",
      "main.js",
      "renderer.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/app.exe",
        "to": "app.exe"
      }
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "tree-kill": "^1.2.2"
  }
}
