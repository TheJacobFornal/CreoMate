{
  "name": "CreoMate",
  "version": "2.1.0",
  "description": "CreoMate app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourcompany.creoMate",
    "productName": "CreoMate",
    "icon": "icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/**/*",
      "main.js",
      "renderer.js",
      "package.json"
    ],
    "extraResources": [
      { "from": "dist/app.exe", "to": "app.exe" }
    ],
    "win": {
      "target": "nsis"
    },

    "nsis": {
  "oneClick": false,
  "allowToChangeInstallationDirectory": true,
  "perMachine": false,          
  "allowElevation": false,    
  "createDesktopShortcut": true,
  "createStartMenuShortcut": true,
  "shortcutName": "CreoMate"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "tree-kill": "^1.2.2"
  }
}
